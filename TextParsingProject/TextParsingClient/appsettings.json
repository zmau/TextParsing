{
  "Serilog": {
    "MinimumLevel": "Verbose",
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "/home/ec2-user/phi-server-logs/PhiAcademy.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss zzz}|{Level}|{ThreadId}|{RequestId}|{SourceContext}{NewLine}    {Message}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "apiUrl": "https://localhost:44379",
  "ConnectionStrings": {
    "orionDB": "Data Source=.;Initial Catalog=orion;Integrated Security=True"
  }
}
